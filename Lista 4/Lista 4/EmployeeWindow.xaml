<Window x:Class="Lista_4.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja Pracownika" Height="400" Width="350">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Imię:" FontWeight="Bold"/>
            <TextBox x:Name="txtFirstName" Margin="0,5,0,10"/>

            <TextBlock Text="Nazwisko:" FontWeight="Bold"/>
            <TextBox x:Name="txtLastName" Margin="0,5,0,10"/>

            <TextBlock Text="Stanowisko:" FontWeight="Bold"/>
            <TextBox x:Name="txtPosition" Margin="0,5,0,10"/>

            <Button Content="Wybierz zdjęcie..." Click="SelectImage_Click" Margin="0,0,0,5"/>
            <Image x:Name="imgPreview" Height="100" Stretch="Uniform" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Anuluj" Width="80" Click="Cancel_Click" Margin="0,0,10,0"/>
                <Button Content="Zapisz" Width="80" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>