<Window x:Class="Lista_4.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edycja Pracownika" Height="450" Width="350">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Imię:" FontWeight="Bold"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

            <TextBlock Text="Nazwisko:" FontWeight="Bold"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

            <TextBlock Text="Stanowisko:" FontWeight="Bold"/>
            <TextBox Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

            <Button Content="Wybierz zdjęcie..." Click="SelectImage_Click" Margin="0,0,0,5"/>

            <Image Source="{Binding ImagePath}" Height="100" Stretch="Uniform" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Anuluj" Width="80" Click="Cancel_Click" Margin="0,0,10,0"/>
                <Button Content="Zapisz" Width="80" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>