<Window x:Class="Lista_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sklep Sportowy - Pracownicy" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="lvEmployees" Grid.Row="0" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Zdjęcie" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath}" Height="40" Width="40" Stretch="UniformToFill"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Imię" DisplayMemberBinding="{Binding FirstName}" Width="100"/>
                    <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding LastName}" Width="100"/>
                    <GridViewColumn Header="Stanowisko" DisplayMemberBinding="{Binding Position}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Dodaj" Width="80" Margin="5" Click="Add_Click"/>
            <Button Content="Edytuj" Width="80" Margin="5" Click="Edit_Click"/>
            <Button Content="Usuń" Width="80" Margin="5" Click="Delete_Click"/>
            <Button Content="Zapisz XML" Width="80" Margin="20,5,5,5" Click="SaveXML_Click" Background="LightBlue"/>
            <Button Content="Wczytaj XML" Width="80" Margin="5" Click="LoadXML_Click" Background="LightBlue"/>
        </StackPanel>
    </Grid>
</Window>