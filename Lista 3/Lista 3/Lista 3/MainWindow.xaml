<Window x:Class="Lista_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista Osób - Zadanie 3" Height="450" Width="600"
        Loaded="Window_Loaded" Closing="Window_Closing">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Name="DgPeople" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Imię" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="PESEL" Binding="{Binding Pesel}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Usuń" Width="80" Margin="0,0,10,0" Click="BtnDelete_Click" Background="#FFDDDD"/>
            <Button Content="Edytuj" Width="80" Margin="0,0,10,0" Click="BtnEdit_Click"/>
            <Button Content="Dodaj" Width="80" Click="BtnAdd_Click" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>