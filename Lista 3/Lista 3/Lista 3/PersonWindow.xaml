<Window x:Class="Lista_3.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dane Osoby" Height="250" Width="300"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">

            <Label Content="Imię:"/>
            <TextBox Name="TxtFirstName" Margin="0,0,0,10"/>

            <Label Content="Nazwisko:"/>
            <TextBox Name="TxtLastName" Margin="0,0,0,10"/>

            <Label Content="PESEL:"/>
            <TextBox Name="TxtPesel" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" Width="70" Height="25" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button Content="Zapisz" Width="70" Height="25" Click="BtnSave_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>