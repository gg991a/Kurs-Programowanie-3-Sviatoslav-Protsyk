<Window x:Class="Lista_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Lista_4"
        Title="Sklep Sportowy - Pracownicy (MVVM Toolkit)" Height="450" Width="600">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" Margin="10" 
                  ItemsSource="{Binding Employees}" 
                  SelectedItem="{Binding SelectedEmployee}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Zdjęcie" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath}" Height="40" Width="40" Stretch="UniformToFill"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Imię" DisplayMemberBinding="{Binding FirstName}" Width="100"/>
                    <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding LastName}" Width="100"/>
                    <GridViewColumn Header="Stanowisko" DisplayMemberBinding="{Binding Position}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Dodaj" Width="80" Margin="5" 
                    Command="{Binding AddEmployeeCommand}"/>

            <Button Content="Edytuj" Width="80" Margin="5" 
                    Command="{Binding EditEmployeeCommand}"/>

            <Button Content="Usuń" Width="80" Margin="5" 
                    Command="{Binding DeleteEmployeeCommand}"/>

            <Button Content="Zapisz XML" Width="80" Margin="20,5,5,5" 
                    Command="{Binding SaveXmlCommand}" Background="LightBlue"/>

            <Button Content="Wczytaj XML" Width="80" Margin="5" 
                    Command="{Binding LoadXmlCommand}" Background="LightBlue"/>
        </StackPanel>
    </Grid>
</Window>