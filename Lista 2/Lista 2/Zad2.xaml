<Window x:Class="Lista_2.Zad2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zadanie 2" Height="450" Width="350">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0"
                   Text="{Binding Info}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

		<ItemsControl Grid.Row="1" ItemsSource="{Binding List}">

			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Rows="3" Columns="3"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>

			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Command="{Binding Click}"
                            Content="{Binding Sign}"
                            FontSize="40"
                            FontWeight="Bold"
                            Margin="3"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<Button Grid.Row="2"
                Content="Od nowa"
                Command="{Binding Reset}"
                FontSize="16"
                Margin="0,15,0,0"
                Padding="10"/>
	</Grid>
</Window>