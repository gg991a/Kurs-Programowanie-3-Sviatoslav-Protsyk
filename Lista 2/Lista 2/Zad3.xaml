<Window x:Class="Lista_2.Zad3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statki (Polska Wersja)" Height="550" Width="800"
        Background="#F0F0F0">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<TextBlock Text="Twoja Flota" Grid.Row="0" Grid.Column="0"
                   HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="5"/>
		<TextBlock Text="Flota Wroga (Kliknij by strzelić)" Grid.Row="0" Grid.Column="1"
                   HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="5"/>

		<Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
			<ItemsControl ItemsSource="{Binding PlanszaGracza}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<UniformGrid Rows="10" Columns="10"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border Background="{Binding Kolor}"
                                BorderBrush="Gray" BorderThickness="0.5" Margin="1">
							<TextBlock Text="{Binding Tekst}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</Border>

		<Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="10">
			<ItemsControl ItemsSource="{Binding PlanszaWroga}" IsEnabled="{Binding TuraGracza}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<UniformGrid Rows="10" Columns="10"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Button Command="{Binding StrzalKomenda}"
                                Background="{Binding Kolor}"
                                Content="{Binding Tekst}"
                                FontWeight="Bold"
                                Margin="1"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</Border>

		<TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                   Text="{Binding Status}"
                   HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"
                   Foreground="#333" Margin="10"/>

		<Button Grid.Row="3" Grid.ColumnSpan="2"
                Content="Nowa Gra"
                Command="{Binding ResetKomenda}"
                Width="150" Height="40" Margin="10"/>
	</Grid>
</Window>