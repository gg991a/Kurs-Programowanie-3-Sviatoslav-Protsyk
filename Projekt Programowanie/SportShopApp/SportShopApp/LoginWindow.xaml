<Window x:Class="SportShopApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="400" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True">

    <Border Background="#1E1E1E" CornerRadius="20" BorderBrush="#333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="10" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                <TextBlock Text="SPORT" Foreground="White" FontSize="36" FontWeight="Black" HorizontalAlignment="Center"/>
                <TextBlock Text="SHOP" Foreground="#00E676" FontSize="36" FontWeight="Light" HorizontalAlignment="Center" Margin="0,-10,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="USERNAME" Foreground="#777" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                <Border Background="#121212" CornerRadius="8" Padding="5">
                    <TextBox x:Name="UsernameBox" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16" Padding="5" CaretBrush="#00E676"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,30">
                <TextBlock Text="PASSWORD" Foreground="#777" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                <Border Background="#121212" CornerRadius="8" Padding="5">
                    <PasswordBox x:Name="PasswordBox" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16" Padding="5" CaretBrush="#00E676"/>
                </Border>
            </StackPanel>

            <Button Grid.Row="3" Content="LOGIN" Click="Login_Click" Height="50" VerticalAlignment="Bottom" 
                    Background="#00E676" Foreground="Black" FontSize="16" FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="✕" Click="Exit_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-30,-30,0"
                    Background="Transparent" Foreground="#555" BorderThickness="0" FontSize="18" Cursor="Hand"/>
        </Grid>
    </Border>
</Window>