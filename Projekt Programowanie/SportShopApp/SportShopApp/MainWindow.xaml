<Window x:Class="SportShopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sklep Sportowy" Height="550" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" Background="#e0f7fa">
            <TextBlock x:Name="WelcomeText" Text="Witaj!" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,20,0" FontSize="16"/>
            <Button Content="Odśwież" Click="Refresh_Click" Width="80" Height="30" Margin="5"/>
            <Button Content="Wyloguj" Click="Logout_Click" Width="80" Height="30" Margin="500,5,5,5" Background="LightGray"/>
        </StackPanel>

        <ListView x:Name="ProductsList" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Zdjęcie" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath}" Height="50" Width="50" Stretch="UniformToFill"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}" Width="180"/>
                    <GridViewColumn Header="Kategoria" DisplayMemberBinding="{Binding Category}" Width="100"/>
                    <GridViewColumn Header="Cena" DisplayMemberBinding="{Binding Price}" Width="70"/>

                    <GridViewColumn Header="Pozostało" DisplayMemberBinding="{Binding Quantity}" Width="70"/>

                    <GridViewColumn Header="Ilość" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding QuantityToBuy}" Width="50" Height="25" TextAlignment="Center" VerticalContentAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="KUP" Click="BuyItem_Click" Tag="{Binding}" Background="LightGreen" FontWeight="Bold" Width="80"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>