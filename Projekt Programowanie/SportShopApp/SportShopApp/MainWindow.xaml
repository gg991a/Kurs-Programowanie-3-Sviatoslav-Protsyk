<Window x:Class="SportShopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SportShop PRO" Height="720" Width="1150" WindowStartupLocation="CenterScreen" 
        Background="#121212">

    <Window.Resources>
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#121212"/>
        </Style>

        <Style x:Key="QtyBox" TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="NeonBtn" TargetType="Button">
            <Setter Property="Background" Value="#00E676"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,8"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF5252"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,25,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="SPORT" FontWeight="Black" FontSize="32" Foreground="White"/>
                    <TextBlock Text="SHOP" FontWeight="Light" FontSize="32" Foreground="#00E676"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="WelcomeText" Text="User" Foreground="#888" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="14"/>
                    <Button Content="Exit" Click="Logout_Click" Background="#333" Foreground="White" Width="60" Height="30" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="15" Padding="15" Margin="0,0,0,25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="🔍" Foreground="#555" VerticalAlignment="Center" Margin="5,0,10,0"/>
                    <TextBox x:Name="SearchBox" Grid.Column="1" Background="Transparent" Foreground="White" BorderThickness="0" 
                             FontSize="15" VerticalContentAlignment="Center" TextChanged="Filter_Changed" CaretBrush="#00E676"/>
                    <Rectangle Grid.Column="2" Width="1" Fill="#333" Margin="15,5"/>
                    <ComboBox x:Name="CategoryCombo" Grid.Column="3" Width="150" SelectionChanged="Filter_Changed" 
                              Background="#1E1E1E" Foreground="Black" BorderThickness="0" Padding="5">
                        <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="Sport"/>
                        <ComboBoxItem Content="Tenis"/>
                        <ComboBoxItem Content="Siłownia"/>
                        <ComboBoxItem Content="Obuwie"/>
                        <ComboBoxItem Content="Fitness"/>
                    </ComboBox>
                </Grid>
            </Border>

            <ListView x:Name="ProductsList" Grid.Row="2" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1E1E1E" CornerRadius="12" Margin="0,0,10,15" Padding="15" Width="730">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.3" ShadowDepth="3"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border CornerRadius="10" ClipToBounds="True" Background="#252525">
                                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <Border Background="#333" CornerRadius="6" Padding="8,3" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Category}" Foreground="#BBB" FontSize="11" FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="{Binding Quantity, StringFormat='Stan: {0}'}" Foreground="#00E676" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat='{}{0} PLN'}" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,25,0"/>

                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Ilość:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBox Text="{Binding QuantityToBuy}" Width="35" Height="35" Style="{StaticResource QtyBox}" Margin="0,0,10,0"/>

                                    <Button Content="+" Click="AddToCart_Click" Tag="{Binding}" 
                                            Background="#333" Foreground="#00E676" FontSize="24" FontWeight="Normal"
                                            Width="45" Height="45" BorderThickness="0" Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="22">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="20" Padding="25">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Twój Koszyk" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                <Rectangle Grid.Row="0" Height="2" Fill="#333" VerticalAlignment="Bottom" Margin="0,0,0,5"/>

                <ListView x:Name="CartList" Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="0,15" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding DisplayName}" Foreground="White" FontSize="14" FontWeight="SemiBold" 
                                               TextTrimming="CharacterEllipsis" MaxWidth="150"/>
                                    <TextBlock Text="{Binding Quantity, StringFormat='Ilość: {0}'}" Foreground="#777" FontSize="12" Margin="0,2,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1" Text="{Binding DisplayPrice}" Foreground="#00E676" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <Button Grid.Column="2" Content="✕" Click="RemoveFromCart_Click" Tag="{Binding}" Style="{StaticResource DeleteBtn}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="2" Margin="0,10,0,25">
                    <Grid>
                        <TextBlock Text="Razem do zapłaty:" Foreground="#888" FontSize="14" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="TotalTxt" Text="0.00 PLN" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>

                <Button Grid.Row="3" Content="ZAPŁAĆ TERAZ" Click="Checkout_Click" Style="{StaticResource NeonBtn}" Height="55" FontSize="16"/>
            </Grid>
        </Border>
    </Grid>
</Window>