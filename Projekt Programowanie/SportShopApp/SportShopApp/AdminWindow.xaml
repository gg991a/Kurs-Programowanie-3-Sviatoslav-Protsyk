<Window x:Class="SportShopApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora" Height="600" Width="950" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" Background="#f0f0f0">
            <TextBlock Text="ADMIN PANEL" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,20,0" FontSize="16"/>
            <Button Content="Dodaj nowy towar" Click="AddProduct_Click" Width="120" Height="30" Margin="5"/>
            <Button Content="Odśwież dane" Click="Refresh_Click" Width="100" Height="30" Margin="5"/>
            <Button Content="Wyloguj" Click="Logout_Click" Width="80" Height="30" Margin="100,5,5,5"/>
        </StackPanel>

        <GroupBox Header="Magazyn (Edycja towarów)" Grid.Row="1" Margin="10">
            <ListView x:Name="AdminProductsList">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="30"/>
                        <GridViewColumn Header="Img" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding ImagePath}" Height="30"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Cena" DisplayMemberBinding="{Binding Price}" Width="60"/>
                        <GridViewColumn Header="Ilość" DisplayMemberBinding="{Binding Quantity}" Width="50"/>

                        <GridViewColumn Header="" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edytuj" Click="EditProduct_Click" Tag="{Binding}" Width="80"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" Background="Gray"/>

        <GroupBox Header="Historia Zamówień" Grid.Row="3" Margin="10">
            <ListView x:Name="OrdersList">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="40"/>
                        <GridViewColumn Header="Klient" DisplayMemberBinding="{Binding UserName}" Width="100"/>
                        <GridViewColumn Header="Produkt" DisplayMemberBinding="{Binding ProductName}" Width="150"/>
                        <GridViewColumn Header="Ilość" DisplayMemberBinding="{Binding Quantity}" Width="50"/>
                        <GridViewColumn Header="Data" DisplayMemberBinding="{Binding OrderDate}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window>