<Window x:Class="SportShopApp.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj nowy produkt" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">

        <TextBlock Text="Nazwa produktu:" Margin="0,5,0,2"/>
        <TextBox x:Name="NameTextBox" Height="25"/>

        <TextBlock Text="Kategoria:" Margin="0,10,0,2"/>
        <TextBox x:Name="CategoryTextBox" Height="25"/>

        <TextBlock Text="Cena (PLN):" Margin="0,10,0,2"/>
        <TextBox x:Name="PriceTextBox" Height="25"/>

        <TextBlock Text="Ilość (sztuki):" Margin="0,10,0,2" FontWeight="Bold"/>
        <TextBox x:Name="QuantityTextBox" Height="25" Text="10"/>
        <TextBlock Text="Zdjęcie:" Margin="0,10,0,2"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Wybierz zdjęcie" Click="SelectImage_Click" Width="100" Height="25" Margin="0,0,10,0"/>
            <TextBlock x:Name="ImagePathTextBlock" Text="Brak pliku" VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic" TextTrimming="CharacterEllipsis" Width="200"/>
        </StackPanel>

        <Image x:Name="ProductImagePreview" Height="100" Margin="0,10,0,10" Stretch="Uniform"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Anuluj" Click="Cancel_Click" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Zapisz" Click="Save_Click" Width="80" Height="30" FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</Window>