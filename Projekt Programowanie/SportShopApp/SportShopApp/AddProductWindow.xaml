<Window x:Class="SportShopApp.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produkt" Height="550" Width="450" WindowStartupLocation="CenterScreen"
        Background="#121212" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ZARZĄDZANIE PRODUKTEM" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="NAZWA"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,15"/>

            <TextBlock Text="KATEGORIA"/>
            <TextBox x:Name="CategoryTextBox" Margin="0,0,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="CENA (PLN)"/>
                    <TextBox x:Name="PriceTextBox"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="ILOŚĆ"/>
                    <TextBox x:Name="QuantityTextBox"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="ZDJĘCIE" Margin="0,15,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Width="60" Height="60" CornerRadius="8" Background="#1E1E1E" ClipToBounds="True">
                    <Image x:Name="ProductImagePreview" Stretch="UniformToFill"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <Button Content="WYBIERZ PLIK" Click="SelectImage_Click" Background="#333" Foreground="White" BorderThickness="0" Padding="15,8" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock x:Name="ImagePathTextBlock" Text="Brak pliku" Foreground="#555" Margin="0,5,0,0" FontSize="10"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="ANULUJ" Click="Cancel_Click" Width="100" Height="40" Background="Transparent" Foreground="#FF5252" BorderThickness="0" FontWeight="Bold" Cursor="Hand" Margin="0,0,10,0"/>

            <Button Content="ZAPISZ" Click="Save_Click" Width="150" Height="40" Background="#00E676" Foreground="Black" BorderThickness="0" FontWeight="Bold" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>